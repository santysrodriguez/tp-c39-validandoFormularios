<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario" >
        <article class="mostrarFormulario">
            <ul class="errores"></ul>
            <form class="form" action="/movies/create" method="POST" id="formularioMoviesAdd">
                <label for="title">Titulo </label>
                <div>
                    <input class="is-invalid" type="text" name="title" id="title" >
                    <br>
                    <span id="span-titulo" style="color: red;"></span>
                </div>
                <label for="rating">Calificación </label>
                <div>
                    <input type="number" name="rating" id="rating" placeholder="Indicar valor entre 0 y 10">
                    <br>
                    <span id="span-calificacion" style="color: red;"></span>
                </div>
                <label for="awards">Premios </label>
                <div>
                    <input type="number" name="awards" id="awards" placeholder="Indicar valor entre 0 y 10">
                    <br>
                    <span id="span-premios" style="color: red;"></span>
                </div>
                <label for="release_date">Fecha de creación </label>
                <div>
                    <input type="date" name="release_date" id="release_date" >
                    <br>
                    <span id="span-fecha" style="color: red;"></span>
                </div>
                <label for="length">Duración </label>
                <div>
                    <input type="number" name="length" id="length" placeholder="Indicar duración entre 60 y 360 minutos" >
                    <br>
                    <span id="span-duracion" style="color: red;"></span>
                </div>
                <label for="genreID">Género </label>
                <div>
                    <select name="genre_id" id="genre_id" >
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                    <br>
                    <span id="span-genero" style="color: red;"></span>
                </div>
                <br>
                <div> <button class="botonAgregar" type="submit" id="agregar">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></div>
            </form>
        </article>
    </section>
    <script src="/js/moviesAddValidation.js"></script>
</body>
</html>